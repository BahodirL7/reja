<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>REJA</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: #b8bbd1">
    <div class="container">
      <h1 class="display-4 text-center py-1">REJA VA MAQSADLAR</h1>

      <div
        class="jumbotron p-3 shadow-sm"
        style="background-color: rgb(243, 239, 239); border-radius: 10px"
      >
        <form id="create-form" action="/create-item" method="POST">
          <div class="d-flex align-items-center">
            <input
              id="create-field"
              type="text"
              autofocus
              autocomplete="off"
              class="form-control pr-3"
              name="reja"
              style="flex: 1; margin-right: 14px"
            />
            <button class="btn btn-primary" style="border-radius: 20px">
              Yangi Reja Qo'shish
            </button>
          </div>
        </form>
      </div>

      <ul id="item-list" class="list-group pt-5">
        <% items.map(function(item) { %>
        <li
          class="list-group-item list-group-item-info d-flex align-items-center justify-content-between"
        >
          <span class="item-text"><%=item.reja%></span>
          <div>
            <button
              data-id="<%=item._id%>"
              class="edit-me btn btn-secondary btn-sm mr-2"
            >
              Edit
            </button>

            <button
              data-id="<%=item._id%>"
              class="delete-me btn btn-danger btn-sm"
            >
              Delete
            </button>
          </div>
        </li>
        <% }) %>
      </ul>

      <button
        id="clean-all"
        class="btn btn-danger"
        style="border-radius: 20px; margin: 40px 0px 10px"
      >
        Hamma Rejalarni o'chirish
      </button>
    </div>
    <!-- <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script> -->

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/browser.js"></script>
  </body>
</html>
